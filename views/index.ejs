<!DOCTYPE html>
<html>
  <head>
    <title>Fake Instagram</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/css/style.css' />
  </head>
  <body>
    <header>
      <div class="container header">
        <div id="logo">
          <img src="/img/logo.png">
        </div>
        <div class="busca">
          <form>
            <input type="search" class="search" placeholder="buscar usuarios">
          </form>
        </div>
        <nav>
          <a href="http://">
            <img src="/img/icons/home.svg">
          </a>
          <a href="">
            <div class="avatar-content">
              <img class="avatar" src="/img/avatar-example.png">
              <b><%=usuario.nome %></b>
            </div>
          </a>
        </nav>
      </div>
    </header>
    <main class="container content">
            <br>
            <div class="card">
              <div class="card-header">
                <div>
                  <img class="avatar" src="/img/avatar-example.png">
                  <b><%=usuario.nome %></b>
                </div>
                <img src="/img/icons/more-vertical.svg">
              </div>
              <div class="card-body">
                               
              </div>
              <form class="form-posts" action="/home" method="POST" enctype="multipart/form-data">
                <input type="hidden" name="usuarios_id" value="<%=usuario.id %>">
                <div class="row">
                  <div class="card-public-input">
                    <input type="file" name="files">
                  </div>
                  <br>
                  <div class="card-public-input">
                    <input type="text" placeholder="No que você está pensando..." name="texto">
                    
                  </div>
                </div>
                <button>Publicar</button>
              </form>

            </div>
            <hr>
            <% for(let p of posts) { %>
            <div class="card">
                <div class="card-header">
                  <div>
                    <img class="avatar" src="/img/avatar-example.png">
                    <b><%=p.usuario.nome %></b>
                  </div>
                  <img src="/img/icons/more-vertical.svg">
                </div>
                <div class="card-img">
                  <img src="<%=p.img %>">
                </div>
                <div class="card-body">
                  <div class="card-itens">
                    <div class="likes">
                      <button onclick="like('<%=p.id%>')">
                        <img src="/img/icons/heart.svg">
                      </button>
                      <b><%=p.n_likes %> likes</b>
                    </div>
                    <b>Postado no dia: 16/04/2020</b>
                  </div>
                  <div class="card-comments">
                    <p><span style='font-size: 13pt; font-weight: bold;'><%=p.texto %></span> </p>
                    <hr>
                    <% for (let c of p.comentarios) { %>
                    <p><b><%=c.usuario.nome %> </b> <%=c.texto %> </p>
                    <% } %>
                  </div>
                 
                </div>
                <form class="form-comments" action="/home/comentarios" method="POST">
                  <input type="hidden" name="posts_id" value="<%=p.id %>">
                  <input type="hidden" name="usuarios_id" value="<%=usuario.id %>">
                  <input type="text" placeholder="Adicione um comentário..." name="texto">
                  <button>Publicar</button>
                </form>
              </div>

              <% } %>
        

    </main>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="/scripts/addLike.js"></script>
  </body>
</html>